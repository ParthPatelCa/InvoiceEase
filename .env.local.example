# InvoiceEase Environment Configuration

# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
# Get these values from https://supabase.com/dashboard/project/[PROJECT_ID]/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI/OCR Configuration for Invoice Processing
# OpenAI API for intelligent data extraction
OPENAI_API_KEY=your_openai_api_key

# Google Document AI for OCR (optional, fallback to pdf-parse if not configured)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_PROCESSOR_ID=your_document_ai_processor_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# Optional: Analytics
NEXT_PUBLIC_POSTHOG_KEY=

# Optional: Error tracking
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Payment processing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Email service
RESEND_API_KEY=

# Optional: File storage (if not using Supabase storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=invoiceease-uploads
